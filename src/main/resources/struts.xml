<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.enable.DynamicMethodInvocation" value="false"/>
    <constant name="struts.devMode" value="true"/>

    <!--suppress Struts2ModelInspection -->
    <package name="default" namespace="/" extends="struts-default">
        <action name="emp-list" class="com.ztx.qa.actions.EmployeeAction" method="list">
            <result name="list">/WEB-INF/list/emp-list.jsp</result>
        </action>

        <action name="emp-delete" class="employeeAction" method="deleteById">
            <result name="success">/WEB-INF/helloworld.jsp</result>
        </action>

        <action name="hello" class="com.ztx.qa.HelloWorld" method="hello">
            <result name="helloworld">/WEB-INF/helloworld.jsp</result>
        </action>
    </package>
    
</struts>